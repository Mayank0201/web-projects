  <body>
  
    <%- include("partials/header.ejs") %>

            <form action="/" method="GET">
                <button type="submit" class="btn btn-primary" aria-current="page">Go Back</button>
            </form>
    
            <form action="/update" method="POST">
                <h2>Enter Post ID to Update:</h2>
                <textarea name="id" rows="2" cols="30" placeholder="Enter the ID of the post to update"></textarea>
                <textarea name="title" rows="2" cols="30" placeholder="Enter the new title for the post you updated"></textarea>
                <textarea name="content" rows="2" cols="30" placeholder="Enter the new content for the post you updated"></textarea>
                <input type="submit" class="btn  btn-primary" value="Update">
            </form>
     
</body>
